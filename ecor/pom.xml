  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.inadco.ecoadapters</groupId>
    <artifactId>ecoadapters-parent</artifactId>
    <version>0.3.18-SNAPSHOT</version>
  </parent>

  <name>Inadco :: Eco R </name>
  <artifactId>ecor</artifactId>

  <packaging>jar</packaging>

  <profiles>

    <profile>
      <id>R</id>
      
      <properties>
        <rpkg-name>ecoR</rpkg-name>
      </properties>

      <build>

        <plugins>

          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
          </plugin>


          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <id>generate-sources</id>
                <phase>compile</phase>
                <configuration>
                  <tasks>
                    <mkdir dir="${basedir}/target/generated-sources/R" />
                    <exec executable="${basedir}/build/genDescription.sh"
                      failonerror="true" dir="${basedir}/build">
                      <!-- R pkg name -->
                      <arg value="${rpkg-name}" />
                      <!-- maven version -->
                      <arg value="${project.version}" />
                    </exec>
                  </tasks>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>

              <execution>
                <id>r-package</id>
                <phase>package</phase>
                <goals>
                  <goal>run</goal>
                </goals>
                <configuration>
                  <tasks>
                    <exec executable="R" failonerror="true"
                      dir="${basedir}/target">
                      <arg value="CMD" />
                      <arg value="build" />
                      <arg
                        value="${basedir}/target/${project.artifactId}-${project.version}-rpkg" />
                    </exec>
                    <!-- rename to maven-sensible artifact name since we 
                      want to upload it into mvn repo with "rpkg" classifier -->
                    <move 
                      tofile="${basedir}/target/${project.artifactId}-${project.version}-rpkg.tar.gz" >
                      <fileset dir="${basedir}/target">
                        <include name="${rpkg-name}_*tar.gz"/>
                      </fileset>
                    </move>

                  </tasks>
                </configuration>
              </execution>
            </executions>
          </plugin>



          <plugin>
            <artifactId>build-helper-maven-plugin</artifactId>
            <groupId>org.codehaus.mojo</groupId>
            <version>1.7</version>
            <executions>
              <execution>
                <id>r-attach</id>
                <phase>package</phase>
                <goals>
                  <goal>attach-artifact</goal>
                </goals>
                <configuration>
                  <artifacts>
                    <artifact>
                      <file>${basedir}/target/${project.artifactId}-${project.version}-rpkg.tar.gz
                      </file>
                      <type>tar.gz</type>
                      <classifier>rpkg</classifier>
                    </artifact>
                  </artifacts>
                </configuration>
              </execution>
            </executions>

          </plugin>
        </plugins>

      </build>

    </profile>
  </profiles>

  <build>

    <plugins>

      <plugin>
        <artifactId>maven-source-plugin</artifactId>
      </plugin>

      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
      </plugin>

    </plugins>
  </build>

  <dependencies>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>ecoadapters</artifactId>
    </dependency>


    <!-- test -->
    <dependency>
      <groupId>org.testng</groupId>
      <artifactId>testng</artifactId>
      <classifier>jdk15</classifier>
      <scope>test</scope>
    </dependency>


  </dependencies>
</project>
